<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="http://www.yourserver.com"
        android:inputType="textCapWords"
        android:key="server_address"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="URL of the remote server"
        android:title="Server" />

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="your_account"
        android:inputType="textCapWords"
        android:key="server_account"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="Your account on the server"
        android:title="Username" />

    <ListPreference
        android:defaultValue="0"
        android:entries="@array/pref_currency_list_titles"
        android:entryValues="@array/pref_currency_list_values"
        android:key="currency_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:summary="Default currency to use as first choice"
        android:title="Currency" />

</PreferenceScreen>
